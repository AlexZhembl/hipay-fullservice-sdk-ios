source 'https://github.com/CocoaPods/Specs.git'

target 'HiPayFullservice_Example', :exclusive => true do
  pod 'HiPayFullservice', :path => '../'
  pod 'HockeySDK'
  pod 'OHHTTPStubs'
end

target 'HiPayFullservice_Tests', :exclusive => true do
  pod 'HiPayFullservice', :path => "../"

  pod 'OCMock'
  pod 'OHHTTPStubs'
end

post_install do |installer|
	system("python ../deployment/generate_parameters.py")
end